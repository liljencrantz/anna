/*
  Test the switch expression
 */
def main()
{
    /*
      Switch containing Int:s
     */
    (0..10).each(foo)
    {
	switch(foo)
	{
	    case(2,4,6,8)
	    {
		print("Even\n");
	    }

	    case(7)
	    {
		print("Seven\n");
	    }

	    cases(1..5|2)
	    {
		print("Odd\n");
	    }
	    
	    default
	    {
		print("Whatever\n");
	    }
	}
    }

    /*
      Switch containing strings
    */
    ["abc", "a", "aa", ?, "bbb"].each(bar)
    {
	switch(bar)
	{
	    case("abc")
	    {
		print("abc\n");
	    }

	    case("b", "bb", "bbb")
	    {
		print("Bunch of b:s\n");
	    }
	    
	    cases(["a":?, "o":?, "u":?, "e":?, "i":?, "y":?])
	    {
		print("Vowel\n");
	    }
	    
	    default
	    {
		print("Don't righly know\n");
	    }
	}
    }
}
