// Naive implementation of the
// Sieve of Eratosthenes

def main()
{
    end :== Int::convert(system.argument[1]) or 1_000_000;
    sieve :== Buffer();
    sieve.count = end;
    count := 0;

    (2..end).each(i)
    {
        if(sieve[i] != 1)
        {
	    ((2*i)..end|i).each(j){ sieve[j] = 1 }
            count++;
        }
    }
    print("There are", count, "prime numbers under", end);
}
