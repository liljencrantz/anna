
def escape(String str...)
(
    documentation("Perform HTML escaping of the specified string.")
)
{
    res := "".thaw;
    "".join(str).each(ch)
    {
	res ~= switch(ch)
	{
	    case('<')
	    {
		"&lt;";
	    }
	    case('&')
	    {
		"&amp;";
	    }
	    case('>')
	    {
		"&gt;";
	    }
	    default
	    {
		ch;
	    }
	}
    };
    res.freeze;
}
